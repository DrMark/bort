<% @user.password = @user.password_confirmation = nil %>
<%= title "Signup", :h2 %>
<% form_for @user do |f| %>
	<%= f.error_messages %>
	<% f.field_set "Your Details" do %>
		<%= f.text_field :name %>
		<%= f.text_field :email %>
		<%= f.password_field :password %>
		<%= f.password_field :password_confirmation, :label => 'Confirm Password' %>
	<% end %>
	<%= f.submit 'Sign Up' %>
<% end %>
